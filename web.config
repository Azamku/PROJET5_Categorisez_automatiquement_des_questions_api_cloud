<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Handler to handle requests to the FastAPI application -->
      <add name="FastAPIHandler" path="*" verb="*" modules="FastCgiModule" scriptProcessor="D:\home\site\wwwroot\venv\Scripts\python.exe|D:\home\site\wwwroot\app\main.py" resourceType="Unspecified" />
    </handlers>
    <fastCgi>
      <!-- FastCGI settings -->
      <application path="D:\home\site\wwwroot\venv\Scripts\python.exe">
        <maxInstances>4</maxInstances>
        <idleTimeout>3600</idleTimeout>
        <instanceMaxRequests>10000</instanceMaxRequests>
      </application>
    </fastCgi>
    <rewrite>
      <!-- URL rewriting rules -->
      <rules>
        <rule name="Rewrite to FastAPI" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="main.py" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
